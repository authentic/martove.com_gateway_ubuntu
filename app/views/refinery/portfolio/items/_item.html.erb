<li class="letter-press featured">
  <%= link_to item.image.url, :class => "hover fancyme", "data-fancybox-group" => "gallery" do %>
      <%= image_tag(item.image.url, {:id => dom_id(item), :title => item.title, :size => Refinery::Portfolio.cover_image_thumb_size}) %>
      <% if ::Refinery::Portfolio.display_item_text %>
          <div>
            <h4><%= item.title %></h4>

            <p><%= raw item.caption %></p>
          </div>
      <% end %>
  <% end %>
</li>

